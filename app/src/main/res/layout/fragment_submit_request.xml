<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/url_container"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/round_corners_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/request_type"
                android:textSize="@dimen/textsize_xmedium"
                android:text="@string/dummy_post"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/transparent"
                android:textSize="@dimen/textsize_xmedium"
                android:maxLines="1"
                android:textColor="@color/white"
                android:hint="https://"
                android:textColorHint="@color/hdfc_light_grey"
                android:layout_toLeftOf="@+id/request_params"
                android:layout_toRightOf="@+id/request_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/request_params"
                android:textSize="@dimen/textsize_xmedium"
                android:text="@string/request_params"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:padding="@dimen/padding_small"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/request_header"
                android:textSize="@dimen/textsize_xmedium"
                android:text="@string/request_header"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_toRightOf="@+id/request_header"
                android:id="@+id/request_body"
                android:textSize="@dimen/textsize_xmedium"
                android:text="@string/request_body"
                android:layout_width="wrap_content"
                android:textColor="@color/hdfc_light_grey"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:textColor="@color/color_white"
                        android:text="form-data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:textColor="@color/color_white"
                        android:text="form-data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:textColor="@color/color_white"
                        android:text="form-data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>